{
  "name": "solis/phpbreaker",
  "description": "PhpBreaker is a exception handling toolkit",
  "license": "MIT",
  "authors": [
    {
      "name": "Rafael Becker",
      "email": "rafael@beecker.com.br"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "4.*",
    "squizlabs/php_codesniffer": "3.*"
  },
  "autoload": {
    "psr-4": {
      "Solis\\Breaker\\": "src"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit tests/",
    "sniff": "vendor/bin/phpcs --standard=psr2 src/",
    "fix-sniff": "vendor/bin/phpcbf --standard=psr2 src/"
  }
}
